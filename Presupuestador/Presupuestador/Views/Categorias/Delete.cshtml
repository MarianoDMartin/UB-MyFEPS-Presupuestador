@model Presupuestador.Models.Categoria

@{
    ViewBag.Title = "Eliminar Categoría";
}

<h2>Eliminar Categoría</h2>

<h3>Estas seguro que queres eliminar esta categoría?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Título
        </dt>

        <dd>
            @Html.DisplayFor(model => model.descripcion)
        </dd>

        <dt>
            Categoría Padre
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Categoria1.descripcion)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        @Html.ActionLink("Cancelar", "Index", routeValues: null, htmlAttributes: new { @class = "btn btn-default", @role = "button" }) |
        <input type="submit" value="Borrar" class="btn btn-danger" />
    </div>
    }
</div>
